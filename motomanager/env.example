APP_NAME="MotoManager CRM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configurações de Localização
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Configurações de Banco de Dados (SQLite por padrão)
DB_CONNECTION=sqlite
DB_DATABASE=/Home/Downloads/motomanager/database/database.sqlite

# Para MySQL (descomente se necessário)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=motomanager
# DB_USERNAME=root
# DB_PASSWORD=

# Para PostgreSQL (descomente se necessário)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=motomanager
# DB_USERNAME=postgres
# DB_PASSWORD=

# Configurações de Cache (Redis recomendado)
CACHE_STORE=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Configurações de Sessão (Redis para melhor performance)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configurações de Filas (Redis para melhor performance)
QUEUE_CONNECTION=redis
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default

# Configurações de Email (Log para desenvolvimento)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@motomanager.com"
MAIL_FROM_NAME="${APP_NAME}"

# Para SMTP (descomente para produção)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null

# Configurações de Arquivos
FILESYSTEM_DISK=local

# Configurações de Segurança
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# Configurações de Log
LOG_STACK=single
LOG_DAILY_DAYS=14

# Configurações de Cache
CACHE_PREFIX=motomanager-cache-
DB_CACHE_TABLE=cache
DB_CACHE_LOCK_TABLE=cache_locks

# Configurações de Filas
DB_QUEUE_TABLE=jobs
DB_QUEUE_RETRY_AFTER=90
QUEUE_FAILED_DRIVER=database-uuids

# Configurações de Sessão
SESSION_TABLE=sessions
SESSION_CONNECTION=default

# Configurações de Autenticação
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
AUTH_PASSWORD_TIMEOUT=10800
AUTH_MODEL=App\Models\User

# Configurações de Reset de Senha
AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens

# Configurações de Manutenção
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Configurações de Timezone
APP_TIMEZONE=America/Sao_Paulo

# Configurações de Filament
FILAMENT_PATH=admin
FILAMENT_DOMAIN=localhost
FILAMENT_MIDDLEWARE=web

# Configurações de Media Library
MEDIA_DISK=public
MEDIA_PATH=media

# Configurações de Performance
OPCACHE_ENABLED=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=8
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1 