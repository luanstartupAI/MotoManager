{
    "name": "motomanager/app",
    "description": "Sistema de Gerenciamento de Motos - Aplicação PHP moderna",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MotoManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MotoManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs": "phpcs src/",
        "cs-fix": "phpcbf src/",
        "phpstan:fix": "phpstan analyse --generate-baseline"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}